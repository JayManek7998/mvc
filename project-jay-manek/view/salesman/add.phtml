					<option value="<?php echo Model_Product::GENDER_FEMALE; ?>" selected><?php echo Model_Product::GENDER_FEMALE_LBL; ?></option>
				</select>
			</td>
		</tr>
		<tr>
			<td>Mobile</td>
			<td><input type="number" name="salesman[mobile]"></td>
		</tr>
		<tr>
			<td>Status</td>
			<td>
				<select name="salesman[status]">
					<option value="<?php echo Model_Product::STATUS_ACTIVE; ?>"><?php echo Model_Product::STATUS_ACTIVE_LBL; ?></option>
					<option value="<?php echo Model_Product::STATUS_INACTIVE; ?>" selected><?php echo Model_Product::STATUS_INACTIVE_LBL; ?></option>
				</select>
			</td>
		</tr>
		<tr>
			<td>Company</td>
			<td><input type="number" name="salesman[company]"></td>
